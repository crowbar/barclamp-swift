[DEFAULT]
#bind_ip = <%= @storage_net_ip %>
bind_port = 6002

log_facility = LOG_LOCAL0
log_level = <%= @debug? "DEBUG": "INFO" %>
log_name = swift-a
log_requests = true
setup_console_handler = true

user = <%= @uid %>


[pipeline:main]
pipeline =  account-server

[app:account-server]
use = egg:swift#account
log_level = <%= @debug? "DEBUG": "INFO" %>
log_requests = true


[account-replicator]

[account-auditor]

[account-reaper]



